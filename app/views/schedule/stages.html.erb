<% path = url_for(controller: 'schedule', action: 'tasks', only_path: true) %>
<div class="content">
	<% @contracts.each do |contract| %>
		<h1><%= link_to contract.name_small, tasks_path(contract.id, '') %></h1>
		<% 
		if @tasks.key? contract.id 
			task = @tasks[contract.id][0]
			time = task.time_remain
			%>
			<div class="content-item">
				<h2><%= link_to 'Задания без этапа', path+'/'+contract.id.to_s+'/0/' %></h2>
				<ul class="info-ul">
					<li><span class="icon-calendar tipped" data-tooltip="Сроки"></span><li>c <%= task.start %> по <%= task.stop %>
					<li><span class="icon-calendar tipped" data-tooltip="Осталось дней"></span><li>
						<% if time["exceed"] %>Осталось <% else %>Просрочено на <% end %>
						<% unless time["days"] == 0 %><%= time["days"] %>дн. <% end %>
						<% unless time["months"] == 0 %><%= time["months"] %>мес. <% end %>
						<% unless time["years"] == 0 %><%= time["years"]  %>г.<% end %>
				</ul>
			</div>
		<% end %>
		
		<% 
		# Список этапов
		if @stages.key? contract.id
			@stages[contract.id].each do |stage|
				time = stage.time_remain %>
				<div class="content-item">
					<h2><%= link_to stage.index+' - '+stage.name, path+'/'+contract.id.to_s+'/'+stage.id.to_s+'/' %></h2>
					<h3><%= stage.comment %></h3>
					<ul class="info-ul">
						<li><span class="icon-calendar tipped" data-tooltip="Сроки"></span><li>c <%= stage.start %> по <%= stage.stop %>
						<li><span class="icon-calendar tipped" data-tooltip="Осталось дней"></span><li>
							<% if time["exceed"] %>Просрочено на <% else %>Осталось <% end %>
							<% unless time["years"] == 0 %><%= time["years"]  %>г.<% end %>
							<% unless time["months"] == 0 %><%= time["months"] %>мес. <% end %>
							<% unless time["days"] == 0 %><%= time["days"] %>дн. <% end %>
					</ul>
				</div>
			<% 
			end
		end
	end %>
</div>