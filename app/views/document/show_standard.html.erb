<div class="content">	<% path = show_standard_path(@standard) %>	<div class="content-item" data-item-id="<%= @standard.id %>" >		<div class="files">			<h2>				<%= @standard.tree_name(@c) %>			</h2>			<% if @standard.documents.size > 0 %>				<ul>					<% @standard.documents.each do |document| %>						<li>							<% if @access < document.security %>								<span class='icon-sign-blank'></span>							<% else %>								<%= label_tag "doc#{document.id}", "<span class='icon-check-empty'></span>".html_safe, class: "check" %>								<%= check_box_tag "doc#{document.id}", document.id, false, :class => "none #{document.can_see}" %>							<% end %>						<li><span class="icon-file <%= document.can_see %>"></span>						<li><%= document.path_file_ed %>					<% end %>				</ul>				<div class="btn-wrap">					<span data-tooltip="Скачать" data-type="standart_<%= @standard.id %>" class="btn download tipped"><span class="icon-download"></span></span>					<span class="btn show tipped" data-type="standart_<%= @standard.id %>" data-tooltip="Показать"><span class="icon-eye"></span></span>				</div>			<% end %>		</div>	</div></div>